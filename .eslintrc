{
  parserOptions: {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "quotes": [1, "single", {"allowTemplateLiterals": true}],
    "semi": [2, "always"]
  },
  "plugins": [
    "react"
  ]
}
