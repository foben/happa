{
  "name": "happa",
  "components": {
    "nginx": {
      "image": "registry.giantswarm.io/giantswarm/happa:0.1.19",
      "ports": 8000,
      "domains": {
        "8000": "happa.giantswarm.io"
      },
      "env": {
        "PASSAGE_ENDPOINT": "https://passage.giantswarm.io",
        "API_ENDPOINT": "https://api.giantswarm.io",
        "DESMOTES_ENDPOINT": "https://desmotes.giantswarm.io",
        "ENVIRONMENT": "production-old-infra"
      }
    },

    "desmotes": {
      "image": "registry.giantswarm.io/giantswarm/desmotes:0.1.1",
      "ports": 5000,
      "domains": {
        "5000": "desmotes.giantswarm.io"
      },

      "env": {
        "GIANTSWARM_API_URI": "https://api.giantswarm.io",
        "PROMETHEUS_URI": "https://leaseweb-prometheus.giantswarm.io",
        "PROMETHEUS_USER": "admin",
        "PROMETHEUS_PASSWORD": "$prometheus_password",
        "PROMETHEUS_QUERY_TIMEOUT": "3.0",
        "CORS_BASE_URI": "https://happa.giantswarm.io",
        "CACHE_KEY_SALT": "$cache_key_salt",
        "DEBUGGING": "yeah",
        "REDIS_HOST": "redis",
        "REDIS_PORT": "6379"
      },

      "links": [
        {
          "component": "redis",
          "target_port": 6379
        }
      ]
    },

    "redis": {
      "ports": 6379,
      "image": "redis:3.2"
    }
  }
}
